@model WebApplication7.Models.Entity.Randevular

@{
    ViewBag.Title = "RandevuGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RandevuGuncelle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Randevular</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Randevu_id)


        <div class="form-group">
            @Html.LabelFor(model => model.Randevu_saat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Randevu_saat, "{0:yyyy-MM-ddTHH:mm:ss}", new
                   {
                       @class = "form-control",
                       @type = "datetime-local"
                   })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
